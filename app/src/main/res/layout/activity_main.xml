<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/neida_header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vawkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vawk"
            android:gravity="center"
            android:textSize="35dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:textColor="@color/cream"
            android:onClick="vawkButtonClick"
            />

        <TextView
            android:id="@+id/arText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ar "
            android:textSize="35dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:textColor="@color/cream"
            android:onClick="arButtonClick"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/vawkPic"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/vawk_main2"
            android:background="@color/black"
            android:layout_weight="1"
            android:onClick="vawkButtonClick"/>
        <ImageView
            android:id="@+id/arPic"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/ar_main"
            android:background="@color/black"
            android:layout_weight="1"
            android:onClick="arButtonClick"
            />
    </LinearLayout>
</LinearLayout>